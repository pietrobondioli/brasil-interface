{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "ESNext",
        ],
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@brasil-interface/*": [
                "packages/*/src"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
