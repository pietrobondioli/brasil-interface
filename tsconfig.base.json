{
    "compilerOptions": {
        "target": "ES2017",
        "module": "UMD",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@brasil-interface/*": [
                "./packages/*/src"
            ]
        },
        "types": [
            "jest"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}
